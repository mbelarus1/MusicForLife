<div class="container_2">
<h2> <%= @listing.title %> </h2>
<% if @listing.photo.attached? %>
   <div class="card">
          <img src="<%= cl_image_path @listing.photo.key, height: 200, crop: :fill %>" />
          <div class="card-infos">
            <h2 class="card-pricing">Price: <%=@listing.price %></h2>
            </div>
        </div>
        <% else %>
          <div>
          <div class="card">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-infos">
            <h2 class="card-pricing"><%=@listing.price%></h2>
            </div>
        </div>
        <% end %>
        <br>
      <p><%= @listing.description %></p>
        <%= link_to "Book Now!", new_listing_booking_path(@listing, @booking), class: 'btn btn-home' %>
    </div>
</div>
