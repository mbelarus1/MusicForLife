<div class="container">
<h2> <%= @listing.title %> </h2>
<% if @listing.photo.attached? %>
   <div class="card">
          <img src="<%= cl_image_path @listing.photo.key, height: 200, crop: :fill %>" />
          <div class="card-infos">
            <h2 class="card-pricing">Rental price per day: $<%=@listing.price %></h2>
            </div>
        </div>
        <% else %>
          <div>
          <div class="card">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-infos">
            <h2 class="card-pricing"><%=@listing.price%></h2>
            </div>
        </div>
        <% end %>
