  <%= f.input :start_date, as: :date %>
  <%= f.input :end_date, as: :date %>
  <p> <%= puts  "hello"%></p>
  <%= f.submit 'Confirm booking', class: 'btn btn-block btn-primary'%>
<% end %>

</div>


