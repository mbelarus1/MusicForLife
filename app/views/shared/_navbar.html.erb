<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag 'electric-guitar.png', style: 'height: 30px' %>
  <% end %>
    <h1 class="nav-title">Music for Life</h1>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
        <li class="nav-item">
          <%= link_to "My listings", listings_path, class: "nav-link" %>
        </li>
          <li class="nav-item">
          <%= link_to "My bookings", bookings_path, class: "nav-link" %>
        </li>
          <li class="nav-item">
          <%= link_to "Create a listing", new_listing_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My messages", "#", class: "dropdown-item" %>
            <%= link_to "My settings", "#", class: "dropdown-item" %>
            <%= link_to "My Wallet", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login / Sign Up", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>

  </div>

</div>
