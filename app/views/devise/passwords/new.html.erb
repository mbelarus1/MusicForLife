<div class="container">
  <h1>FORGOT YOUR PASSWORD?</h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Send password instructions via email", class: 'btn btn-block btn-primary' %>
    </div>
  <% end %>
  <%= link_to "Back to login", new_user_session_path, class: 'btn btn-block btn-secondary' %>

</div>
